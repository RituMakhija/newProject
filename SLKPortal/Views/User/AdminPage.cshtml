@{

    ViewBag.Title = "AdminPage";

}



<h2>Admin Page</h2>



<style type="text/css">
    .webGrid {
        margin: 4px;
        border-collapse: collapse;
        width: 500px;
        background-color: white;
    }



    .header {
        background-color: black;
        font-weight: bold;
        color: white;
    }



    .webGrid th, .webGrid td {
        border: 1px solid #C0C0C0;
        padding: 5px;
    }



    .alt {
        background-color: #E4E9F5;
        color: #000;
    }



    .gridHead a:hover {
        text-decoration: underline;
    }



    .description {
        width: auto;
    }



    .select {
        background-color: #71857C;
    }
</style>

@{

    var grid = new WebGrid(ViewBag.list, canPage: true, rowsPerPage: 10,

    selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");

    grid.Pager(WebGridPagerModes.NextPrevious);}


    <div id="gridContent">

        @grid.GetHtml(tableStyle: "webGrid",

            headerStyle: "header",

            alternatingRowStyle: "alt",

            selectedRowStyle: "select",

            columns: grid.Columns(

            grid.Column("UserId", "User ID"),

                grid.Column("FirstName", "First Name"),

                grid.Column("MiddleName", "Middle Name"),

                grid.Column("LastName", "Last Name"),

                grid.Column("PhoneNumber", "Phone Number"),

                grid.Column("Gender", "Gender"),

                grid.Column("DateOfBirth", "Date Of Birth"),

                grid.Column("EmailID", "EmailID"),

                grid.Column("Address", "Address"),

                grid.Column("City", "City"),

                grid.Column("ZipCode", "ZipCode"),

                grid.Column("State", "State"),

                grid.Column("Country", "Country"),

                grid.Column("Department", "Department"),

                grid.Column("TenthBoard", "Tenth Board"),

                grid.Column("TenthMarks", "Tenth Marks"),

                grid.Column("TwelfthBoard", "Twelfth Board"),

                grid.Column("TwelfthMarks", "Twelfth Marks"),

            grid.Column(header: "Action", format: @<text> <a href="~/User/Edit?UserId=@item.UserId" id="Edit_@item.UserId" class="edit">Edit</a> <a href="~/User/Delete?UserId=@item.UserId" id="Delete_@item.UserId" class="delete">Delete</a></text>)

                        ))

    </div>

    <p>

        @Html.ActionLink("Create New", "Create")

    </p>
