@model IEnumerable<SLKPortal.Models.registration>

@{
    ViewBag.Title = "Index";
}
<div style="font-family:Arial">
    <h2>Employee List</h2>
    <p>
        @using (@Html.BeginForm("Index", "User", FormMethod.Get))
        {
            <b>Search By:</b>
            @Html.RadioButton("searchBy", "UserName", true) <text>User Name</text>
            @Html.RadioButton("searchBy", "SlNo") <text>SlNo</text><br />
            @Html.TextBox("search") <input type="submit" value="search" />
        }
    </p>
    <table border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SlNo)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.EmailId)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ConfirmPassword)
            </th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4">
                    No records match search criteria
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SlNo)
                    </td> 

                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailId)
                    </td>  
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.ConfirmPassword)
                    </td>                
                </tr>
            }
        }
    </table>
</div> 