@model SLKPortal.Models.registration

@{

    ViewBag.Title = "AdminPage1";

}



<h2>Admin Page</h2>



<style type="text/css">
    .webGrid {
        margin: 4px;
        border-collapse: collapse;
        width: 500px;
        background-color: white;
    }



    .header {
        background-color: black;
        font-weight: bold;
        color: white;
    }



    .webGrid th, .webGrid td {
        border: 1px solid #C0C0C0;
        padding: 5px;
    }



    .alt {
        background-color: #E4E9F5;
        color: #000;
    }



    .gridHead a:hover {
        text-decoration: underline;
    }



    .description {
        width: auto;
    }



    .select {
        background-color: #71857C;
    }

    #detail {
        border: 1px solid;
        padding: 10px;
        box-shadow: 5px #888888;
        padding: 5px;
        width: 60px;
        background-color: gainsboro;
    }

        #detail a {
            color: black;
        }
</style>

@{

    var grid = new WebGrid(ViewBag.list, canPage: true, rowsPerPage: 10,

    selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");

    grid.Pager(WebGridPagerModes.NextPrevious);}







<div id="gridContent">

    @grid.GetHtml(tableStyle: "webGrid",

            headerStyle: "header",

            alternatingRowStyle: "alt",

            selectedRowStyle: "select",

            columns: grid.Columns(

                grid.Column("SlNo", "Sl No"),

                grid.Column("UserName", "User Name"),

                grid.Column("EmailId", "Email ID"),

                grid.Column("Password", "Password"),

                grid.Column("ConfirmPassword", "Confirm Password"),

            grid.Column(header: "Action", format: @<text> <a href="~/User/Edit1?SlNo=@item.SlNo" id="Edit_@item.SlNo" class="edit">Edit</a> <a href="~/User/Delete1?SlNo=@item.SlNo" id="Delete_@item.SlNo" class="delete">Delete</a></text>)

                        ))

</div>

<div>

    @Html.ActionLink("Create New", "Create1")

</div>

<div>

    <input type="button" value="Details" onclick="window.location.href='AdminPage'" />

</div>

<div>

    <input type="button" value="Search" onclick="window.location.href='Index'" />

</div>